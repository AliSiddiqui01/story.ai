{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@ai-storyteller/shared/*": ["../shared/src/*"]
    },
    "composite": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../shared" }
  ]
}
